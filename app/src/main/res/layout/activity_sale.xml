        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Product"
            android:layout_width="@dimen/editText_width"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_blueborder"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:padding="@dimen/ten"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtProduct"
            app:layout_constraintTop_toBottomOf="@+id/txtProduct" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight"
            android:text="Date"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Product"
            app:layout_constraintTop_toBottomOf="@+id/Product" />

        <EditText
            android:id="@+id/Date"
            android:layout_width="@dimen/editText_width"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_blueborder"
            android:drawableEnd="@drawable/ic_baseline_view_comfy_24"
            android:padding="@dimen/ten"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtDate"
            app:layout_constraintTop_toBottomOf="@+id/txtDate" />

        <TextView
            android:id="@+id/txtamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight"
            android:text="Amt"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Date"
            app:layout_constraintTop_toBottomOf="@+id/Date" />

        <EditText
            android:id="@+id/Amt"
            android:layout_width="@dimen/editText_width"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_blueborder"
            android:padding="@dimen/ten"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtamt"
            app:layout_constraintTop_toBottomOf="@+id/txtamt" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/btn_greencolor"
            android:gravity="center"
            android:text="@string/cancel"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/btn_greencolor"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
